include ../mixins/carousel_items
include ../mixins/background_stars
include ../mixins/next_btn

div.d-flex.flex-column.section-outer.choose-starship
    div.infobar-min-height.w-100
    +draw_stars
    
    div.container
        div.little-choise__description.text-center.text-light.mt-4 Выберите корабль
        div.carousel.mt-5.d-flex(id="starshipCarouselControls")
            button.carousel-control-prev.position-relative(type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev")
                span.carousel-control-prev-icon(aria-hidden="true")
                span.visually-hidden Previous
            div.carousel-inner
                +circled_item(
                    "starship0",
                    "starship",
                    "Serenity",
                    "Serenity",
                    "img/Serenity.png",
                    true
                )
                +circled_item(
                    "starship1",
                    "starship",
                    "Rosinant",
                    "Rosinant",
                    "img/Rossinant.png",
                    false
                )
                +circled_item(
                    "starship2",
                    "starship",
                    "Millennium Falcon",
                    "Millennium Falcon",
                    "img/milleniumFalcon-min.png",
                    false
                )
                +circled_item(
                    "starship3",
                    "starship",
                    "Normandia Sr2",
                    "Normandia Sr2",
                    "img/NormandiaSr2-min.png",
                    false
                )
                
            button.carousel-control-next.position-relative(type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next")
                span.carousel-control-next-icon(aria-hidden="true")
                span.visually-hidden Next
        
        +next-bottom-btn
